using System;

namespace E2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Skriv längd");
            int längd = int.Parse(Console.ReadLine());
            Console.WriteLine("Skriv bredd");
            int bredd = int.Parse(Console.ReadLine());
            Console.WriteLine("Omkretsen är");
            Console.WriteLine(längd + bredd + längd + bredd);
            Console.WriteLine("Arean är");
            Console.WriteLine(längd * bredd);


        }
    }
}
